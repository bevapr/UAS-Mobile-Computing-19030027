<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BobotNilai">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Bobot Nilai"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="160dp"
        android:text="Presensi"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/babsen"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="#E0E0E0"
        android:hint="Masukkan Bobot Presensi"
        android:inputType="numberDecimal"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="220dp"
        android:text="Tugas"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <EditText
        android:id="@+id/btugas"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="210dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="#E0E0E0"
        android:hint="Masukkan Bobot Tugas"
        android:inputType="numberDecimal"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="280dp"
        android:text="UTS"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <EditText
        android:id="@+id/buts"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="270dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="#E0E0E0"
        android:hint="Masukkan Bobot UTS"
        android:inputType="numberDecimal"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="340dp"
        android:text="UAS"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <EditText
        android:id="@+id/buas"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="330dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="#E0E0E0"
        android:hint="Masukkan Bobot UAS"
        android:inputType="numberDecimal"
        android:padding="10dp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="274dp"
        android:background="@drawable/capsule"
        android:onClick="proses"
        android:text="Proses Hitung Nilai Akhir"
        android:textColor="@color/white" />
</RelativeLayout>